@{
    //Layout = null;
}
<link href="~/Content/LogIn.css" rel="stylesheet" />
<!DOCTYPE html>
<div class="log">

    <div class="container">



        <div class=" w3l-login-form kk">
            @if (ViewBag.Error != null)
            {
                <div class="warning" id="warningLabel">
                    <label style="text-align: center;">Incorrect</label>
                </div>
            }
            <h2>Login Here</h2>
            <form action="LogIn" method="POST" id="login">

                <div class=" w3l-form-group">
                    <label>Username:</label>
                    <div class="group">
                        <i class="fas fa-user"></i>
                        <input type="text" class="form-control" placeholder="UserEmail" name="Email" required="required" />
                    </div>

                </div>
                <p class='elabel1'></p>
                <div class=" w3l-form-group">
                    <label>Password:</label>
                    <div class="group">
                        <i class="fas fa-unlock"></i>
                        <input type="password" class="form-control" placeholder="Password" name="Password" required="required" />

                    </div>

                </div>
                <p class='elabel2'></p>
                <div class=" w3l-form-group">
                    <label>User:</label>

                    <select style="width: 404px; height: 48px; padding-left: 20px; color: black;" class="form-control" id="Type" name="Type">
                        <option value="">Select Login Category</option>
                        <option value="1">Patient</option>
                        <option value="2">Doctor</option>
                        <option value="3">Nurse</option>
                        <option value="4">Receptionist</option>
                    </select>

                </div>
                <p class='elabel3'></p>
                <div class="forgot">
                    <a href="#">Forgot Password?</a>
                    <p>
                        <input type="checkbox">Remember Me
                    </p>
                </div>
                <button type="submit">Login</button>
            </form>
            <p class=" w3l-register-p">
                Don't have an account?<a href="@Url.Action("Registration","Security")" class="register"> Register</a>
            </p>
        </div>

    </div>
</div>
@section scripts
    {
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>

        $(document).ready(function () {

            setTimeout(function () {
                $("#warningLabel").hide(1000).empty();
            }, 5000);
            $.validator.setDefaults({ ignore: ":hidden:not(select)" });
            $("#login").validate({

                rules: {
                    Email: {
                        required: true,
                        email: true
                    },
                    Password: {
                        required: true

                    },
                    Type: "required"
                },
                messages: {
                    Email: {
                        required: "Please Enter Your Email",
                        email: "Email is not correct"
                    },
                    Password: {
                        required: "Please Enter Your Password"

                    },
                    Type: "Please Select UserType"

                },
                errorPlacement: function (error, element) {
                    if (element.is(":text")) {
                        error.appendTo(('.elabel1'));
                    } else if (element.is(":password")) {
                        error.appendTo(('.elabel2'));
                    } else if (element.is('select')) { // This is the default behavior
                        error.appendTo(('.elabel3'));
                    }
                }


            });

        });

    </script>
}