<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title WeMedCare</title>
    <link href="http://fonts.googleapis.com/css?family=Cookie" rel="stylesheet" type="text/css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link href="~/Content/fontawesome-all.min.css" rel="stylesheet" />


</head>
<body>

    <nav style="background-color: #34404c;" class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand myclass" href="#">
            <i style="font-size: 47px;" class="logo fa fa-user-md"></i>
            WeMedCare
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="menual collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
            
            @if (Session["PatientId"] == null && Session["DoctorId"] == null && Session["NurseId"] == null && Session["ReceptionistId"] == null && Session["AdminId"] == null)
            {
                <div class="navbar-nav">
                    <a class="nav-item nav-link @ViewBag.Index" href="@Url.Action("Index","Medical")">Home <span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link  @ViewBag.Doctor" href="@Url.Action("DoctorInfo", "medical")">Doctor</a>
                    <a class="nav-item nav-link @ViewBag.Tutorial" href="@Url.Action("Tutorial", "medical")">Tutorial</a>
                    <a class="nav-item nav-link @ViewBag.HospitalContact" href="@Url.Action("HospitalContact", "medical")">Information</a>
                    <a class="nav-item nav-link  @ViewBag.Login" href="@Url.Action("LogIn", "Security")">Login</a>
                    <a class="nav-item nav-link  @ViewBag.Registration" href="@Url.Action("Registration", "Security")">Register</a>
                </div>
            }
            @if (Session["PatientId"] != null)
            {
                <div class="navbar-nav">
                    <a class="nav-item nav-link @ViewBag.Index" href="@Url.Action("Index","Medical")">Home <span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link  @ViewBag.Appointment" href="@Url.Action("Appointment","Medical")">Appointment</a>
                    <a class="nav-item nav-link @ViewBag.Tutorial" href="@Url.Action("Tutorial","Medical")">Tutorial</a>
                    <a class="nav-item nav-link @ViewBag.HospitalContact" href="@Url.Action("Information", "Medical")">Notification<sup><span id="patientnotification" style="display: none;" class="notified fa fa-bell"> @Session["PatientNotification"]</span></sup></a>
                    <a class="nav-item nav-link  @ViewBag.PatientProfile" href="@Url.Action("PatientProfile", "Medical")">Profile</a>
                    <a class="nav-item nav-link " href="@Url.Action("PatientLogout", "Security")">Logout</a>
                </div>
            }
            @if (Session["DoctorId"] != null)
            {
                <div class="navbar-nav">
                    <a class="nav-item nav-link @ViewBag.Index" href="@Url.Action("Index","Medical")">Home <span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link @ViewBag.Tutorial" href="@Url.Action("Prescription","Medical")">Prescription</a>
                    <a class="nav-item nav-link  @ViewBag.DoctorProfile" href="@Url.Action("DoctorProfile","Medical")">Profile</a>
                    <a class="nav-item nav-link " href="@Url.Action("DoctorLogout", "Security")">Logout</a>

                </div>
            }
            @if (Session["NurseId"] != null)
            {
                <div class="navbar-nav">
                    <a class="nav-item nav-link @ViewBag.Index" href="@Url.Action("Index","Medical")">Home <span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link  @ViewBag.NurseProfile" href="@Url.Action("NurseProfile","Medical")">Profile</a>
                    <a class="nav-item nav-link " href="@Url.Action("NurseLogout", "Security")">Logout</a>

                </div>
            }
            @if (Session["ReceptionistId"] != null)
            {
                <div class="navbar-nav">
                    <a class="nav-item nav-link @ViewBag.Index" href="@Url.Action("Index","Medical")">Home <span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link @ViewBag.DoctorAppointment" href="@Url.Action("DoctorAppointment", "Medical")">Appointment</a>
                    <a class="nav-item nav-link @ViewBag.PatientInWard" href="@Url.Action("PatientInWard","Medical")">PatientInWard</a>
                    <a class="nav-item nav-link  @ViewBag.ReciptionistProfile" href="@Url.Action("ReceptionistProfile","Medical")">Profile</a>
                    <a class="nav-item nav-link " href="@Url.Action("ReceptionistLogout", "Security")">Logout</a>

                </div>
            }
            @if (Session["AdminId"] != null)
            {
                <div class="navbar-nav">
                    <a class="nav-item nav-link @ViewBag.Index" href="@Url.Action("Index","Medical")">Home <span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link @ViewBag.Save" href="@Url.Action("Create","DoctorAdmin")">Doctor</a>
                    <a class="nav-item nav-link @ViewBag.NurseCreate " href="@Url.Action("Create", "NurseAdmin")">Nurse</a>
                    <a class="nav-item nav-link @ViewBag.ReceptionistCreate " href="@Url.Action("Create", "ReceptionistAdmin")">Receptionist</a>
                    <a class="nav-item nav-link @ViewBag.NurseAssignToWard" href="@Url.Action("NurseAssignToWard", "Admin")">AssignNurse</a>
                    <a class="nav-item nav-link @ViewBag.PatientRealeseFromWard " href="@Url.Action("PatientRealeseFromWard", "Admin")">Realese</a>
                    <a class="nav-item nav-link @ViewBag.Reciption" href="@Url.Action("Reciption","Medical")">Information</a>
                    <a class="nav-item nav-link " href="@Url.Action("AdminLogout", "Security")">Logout</a>

                </div>
            }

        </div>
    </nav>

    @RenderBody()

    <footer class="footer-distributed">

        <div class="footer-left">

            <h3>WeMed<span>Care</span></h3>

            <p class="footer-links">
                We are dedicate to providing the best possible<br> health care for the people to get better health.
            </p>

            <p class="footer-company-name">2019</p>
        </div>

        <div class="footer-center">

            <div>
                <i class="fa fa-map-marker"></i>
                <p><span>Commerce collage Street</span> Agrabad, Chittagong</p>
            </div>

            <div>
                <i class="fa fa-phone"></i>
                <p>+01620629067</p>
            </div>

            <div>
                <i class="fa fa-envelope"></i>
                <p><a href="#">elegant@gmail.com</a></p>
            </div>

        </div>

        <div class="footer-right">

            <p class="footer-company-about">
                <span>About the company</span>
                Mohammad Amaz Uddin,Md Sayem hossain,Nahida Yeasmin Bithi,Chandrasree Das Gupta.
            </p>

            <div class="footer-icons">

                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-linkedin-in"></i></a>
                <a href="#"><i class="fab fa-github"></i></a>

            </div>

        </div>

    </footer>

</body>
</html>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

    


<script>
    var k = parseInt($('#patientnotification').html())||0;
    console.log(k);
   
    if (k > 0) {
        $('#patientnotification').show();
    }
</script>