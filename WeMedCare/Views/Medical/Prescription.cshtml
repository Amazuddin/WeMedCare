    <script type="text/javascript">
        function valueappend(id) {
            var appointmentid = id;
            $('#patid').empty();
            console.log(appointmentid);
            $('#patid').append('<input type="hidden" name="AppointmentId" value="' + appointmentid + '">');
        }
        $(document).ready(function() {
            var table = $('#patable').DataTable();
            var asiaTime = new Date().toLocaleString("en-US", { timeZone: "Asia/Dhaka" });
            var date = new Date(asiaTime);
            $('#tddate').datepicker({
                startDate: date,
                autoclose: true,
                todayHighlight: true
            });
           

            $('#searchbtn').on('click', function () {


                table.clear();

                var serialNo = 1;
                var date = $('#tddate').val();
                var json = { date: date };
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetAllPatient", "Medical")',
                    contentType: 'application/json',
                    data: JSON.stringify(json),
                    success: function (response) {

                        $.each(response, function (key, value) {
                           
                            var cca = "callbtn" + serialNo;
                            var butt = "<button onclick=\"valueappend(" + value.AppointmentId + ")\" id= " + cca + "\" style=\"width: 100%; background-color:blue;\" class=\"btn btn-success ttb\">Call</button>" +
                                "<div style=\"height: 0; width: 0; visibility: hidden;\" id=\"AppointmentId\">" + value.AppointmentId + "</div>";
                            table.row.add([
                               serialNo,
                               value.PatientName,
                               value.Age,
                               butt

                            ]).draw(false);
                            serialNo += 1;
                        });

                    }

                });
                return false;
            });




           



