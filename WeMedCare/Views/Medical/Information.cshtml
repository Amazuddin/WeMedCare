
@using WeMedCare.Models
@{
    //Layout = null;
}


    <meta name="viewport" content="width=device-width" />
    <title>Information</title>
    <link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <style>
        .tabledesign {
            margin: 80px;
            margin-top: 100px;
            padding: 24px;
        }
        .lll {
            width: 150px;
        }
    </style>
<body>
    <div class="tabledesign">
        <table id="informationtable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    
                    <th class="th-sm">Date</th>
                    <th class="th-sm"> Doctor Name </th>
                    <th class="th-sm"> Specialist</th>
                    
                    <th class="th-sm">Prescription</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DoctorAppointmentView d in Model)
                {

                    <tr>
                        
                        <td>@d.Date</td>
                        <td>@d.DoctorName</td>
                        <td>@d.Specialist</td>
                        <td><a href="#" onclick="window.open('../@d.Prescription', '_blank');;"><button type="button" class="btn btn-primary lll">Prescription</button></a> </td>
                    </tr>
                           
                }
            </tbody>
        </table>
    </div>
</body>

@section scripts
{

    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#informationtable').DataTable();
        });
    </script>
}