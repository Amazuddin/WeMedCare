@using WeMedCare.Models

@{
    //Layout = null;
    Nurse nur = ViewBag.nurse;
}


<meta name="viewport" content="width=device-width" />
<title>NurseProfile</title>
<style>
    .formdesign {
        margin-top: 40px;
    }

    .t_pro {
        margin-top: 20px;
        margin-bottom: 15px;
    }

    #ourpro {
        font-size: 48px;
        /*border-bottom-style: ridge;*/
        font-weight: bold;
        /*border-bottom-style: black;*/
        color: cadetblue;
    }

    /*#ourpro:hover {
            color: cornflowerblue;
        }*/
    .btdesign {
        float: right;
        width: 175px;
    }

    .ptform {
        margin-left: 200px;
        margin-top: 80px;
        margin-right: 200px;
        padding: 62px 118px;
        background-color: #f5f9fd;
        border: 0px;
        border-style: outset;
        box-shadow: 0px 0px 20px #d8d4d4;
        /*border-radius: 0 0 20px 20px;*/
    }
</style>
<body>
    <div class="ptform">
        <div class="container">
            <div class="t_pro">
                <center>

                    <i class="far fa-user-circle" id="ourpro"><strong>Profile</strong></i>
                </center>
            </div>
            <div class="formdesign">
                <form id="Updateprofile" method="POST" action="NurseProfile">
                    <div class="form-group row">
                        <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputName" placeholder="Name" value="@nur.Name" disabled="">
                        </div>
                    </div>
                   
                    <div class="form-group row">
                        <label for="inputAddress" class="col-sm-2 col-form-label">Designation</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputAddress" placeholder="Address" value="@nur.Designation" disabled="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputMobile" class="col-sm-2 col-form-label">Mobile</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputMobile" placeholder="Mobile" value="@nur.Number" disabled="">
                        </div>
                    </div>

                    @*<div class="form-group row">
                        <div class="col-sm-10">
                            <a href="@Url.Action("PatientProfileUpdate", "Medical")"><button type="submit" class="btn btn-primary btdesign">Update Profile</button></a>

                        </div>
                    </div>*@
                </form>
            </div>

        </div>
    </div>
</body>
