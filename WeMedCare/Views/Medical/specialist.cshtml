@using WeMedCare.Models

@{
    //Layout = null;
    List<SpecialistModel> specialist = ViewBag.specialistlist;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>specialist</title>
    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet"/>
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet"/>
    <style>
        .lebeldesign {
            float: left;
            margin-left: 1px;
            font-size: 21px;
            color: #1b2631;
            font-style: italic;
        }
        #SpecialistId {
            float: right;
            margin-right: 5px;
            width: 240px;
            height: 40px;
            border-radius: 20px;
            border: 4px solid #2c3e50;
        }
        .coldesign {
            margin-top: 20px;
            margin-bottom: 10px;
            height: inherit;
            background-color: #aeb6bf;
            padding-top: 15px;
        }
        .design {
            border-radius: 20px;
            margin-top: 50px;
            height: inherit;
            margin: 10px;
            padding: 12px;
            text-align: center;
            box-shadow: -1px 2px 18px #9191b6;
        }
            .design:hover {
                box-shadow: -1px 2px 18px #9191b6;
            }
    </style>
</head>
<body>
    <div class="img_hospital">
        <img src="~/Content/picture/special.jpg" height="500px;" width="100%;">
    </div><br/>
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 coldesign">
            <center>
                <form method="POST">

                    <label class="lebeldesign"><b>Specialist</b></label>
                    <select id="SpecialistId" name="SpecialistId">

                        <option value="">SELECT</option>
                        @foreach (SpecialistModel sp in specialist)
                        {
                            <option value="@sp.SpecialistId">@sp.Specialist</option>
                        }
                    </select><br/><br/>
                </form>
            </center>

        </div><br>
        <div class="col-md-4"></div>

    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10 design">
            <table class="table table-bordered table-striped table-hover" id="doctortable">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Degree</th>
                    <th>Fess</th>
                    <th>Schedule</th>
                </tr>
                </thead>
                <tbody id="tableBody"></tbody>

            </table>
        </div>
        <div class="col-md-1"></div>
    </div>




</div>
</body>
</html>
@section scripts
{

<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
   <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#doctortable').DataTable();

            $('#SpecialistId').on('change', function () {
                var deptId = $('#SpecialistId').val();

                table.clear().draw(false);
                var json = { id: deptId };
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetAllDoctorInfoById", "Medical")',
                    contentType: 'application/json',
                    data: JSON.stringify(json),
                    success: function (response) {
                        $.each(response, function (key, value) {
                            //$('#tableBody').append('<tr><td>' + value.CourseCode + '</td><td>' + value.CourseName + '</td><td>' + value.CourseSemester + '</td><td>' + value.CourseTeacher + '</td></tr>');

                            table.row.add([
                                value.name,
                                value.degree,
                                value.fees,
                                value.schedule

                            ]).draw(false);
                        });
                    }
                });
            });
        });
    </script>
}