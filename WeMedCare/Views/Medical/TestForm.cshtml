
@{
    //Layout = null;
}


<meta name="viewport" content="width=device-width"/>
<link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
<title>TestForm</title>
<style>
    .error {
        color: red;
       
    }
    .pk {
        color: white;
    }
</style>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form style="background-color: #02646f; margin-top: 50px;" class="text-center border border-light p-5" id="testformid" action="TestForm" method="POST">
                    @if (ViewBag.Yes == '1')
                    {
                    <div class="warning" id="warningLabel">
                        <label>Send Successfully</label>
                    </div>
                    }
                    <p class="h4 mb-4 pk">Test Form</p>

                    <!-- Name -->
                    
                    <input type="text" id="defaultContactFormName" class="form-control mb-4" placeholder="Name" name="Name" required="">

                    <!-- Email -->
                    <input type="email" id="defaultContactFormEmail" class="form-control mb-4" placeholder="E-mail" name="Email" required="">
                    <!-- Number -->
                    <input type="text" id="defaultContactFormMobile" class="form-control mb-4" placeholder="Number" name="Number" required="">
                    <!-- Address -->
                    <input type="text" id="defaultContactFormAddress" class="form-control mb-4" placeholder="Address" name="Address" required="">
                    <!-- Test Name -->
                    <input type="text" id="defaultContactFormTestName" class="form-control mb-4" placeholder="Test Name" name="TestName" value="@ViewBag.data" >
                    <input id="defaultContactDate" class="form-control mb-4" type="text" name="Date" placeholder="Date" class="form-control" autocomplete="off">
                    @*<input type="Date" id="defaultContactDate" autocomplete="off"  class="form-control mb-4" placeholder="Date" name="Date" required="">*@
                   
                    <!-- Send button -->
                    <button class="btn btn-info btn-block" type="submit">Send</button>

                </form>
            </div>
            <!-- Default form contact -->
           
            <div class="col-md-3"></div>
            <!-- Default form contact -->
        </div>
    </div>

@section scripts
{


    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
    

        $(document).ready(function () {
            setTimeout(function () {
                $("#warningLabel").hide(1000).empty();
            }, 5000);
           
            var asiaTime = new Date().toLocaleString("en-US", { timeZone: "Asia/Dhaka" });
            var date = new Date(asiaTime);
            $('#defaultContactDate').datepicker({
                startDate: date,
              //weekStart: 6,
              autoclose: true,
             todayHighlight: true
            });
           
            $("#testformid").validate({
                rules: {
                    Name: "required",
                    Email: {
                        required: true,
                        email: true
                    },
                   
                    Number: {
                        required: true,
                        number: true
                    },
                    Address: "required",
                    Date:"required"


                },
                messages: {
                    Name: "Please Enter Your Name",
                    
                    Number: {
                        required: "Please Enter Your Phone Number",
                        number: "Number must avoid cahracter"
                    },
                    Email: {
                        required: "Please Enter Your Email",
                        email: "Email id is not correct"
                    },
                    Address: "Please Enter your Address",
                    Date: "Please Enter Date"

                }
            });
        });

    </script>
}

